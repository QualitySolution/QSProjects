<UserControl x:Class="QS.Project.NavigationManagerView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:navigation="clr-namespace:QS.Navigation;assembly=QS.Project.Avalonia"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="navigation:AvaloniaNavigationManager"
             mc:Ignorable="d">
    <fa:TabView x:Name="tabView" 
                TabItems="{Binding Pages}" 
                SelectedItem="{Binding CurrentPage}"
                TabCloseRequested="OnTabCloseRequested">
        <fa:TabView.TabItemTemplate>
            <DataTemplate x:DataType="navigation:IAvaloniaPage">
                <fa:TabViewItem Header="{Binding Title}" 
                                IsClosable="True"
                                Content="{Binding View}" />
            </DataTemplate>
        </fa:TabView.TabItemTemplate>
    </fa:TabView>
</UserControl>
