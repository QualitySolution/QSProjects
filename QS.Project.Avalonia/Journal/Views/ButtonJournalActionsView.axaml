<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="50"
             x:Class="QS.Journal.Views.ButtonJournalActionsView">
    <DockPanel>
        <!-- Правая панель действий -->
        <StackPanel DockPanel.Dock="Right"
                    Orientation="Horizontal" 
                    Spacing="5"
                    x:Name="rightActionsPanel">
            <!-- Правые кнопки будут добавляться динамически в code-behind -->
        </StackPanel>
        
        <!-- Левая панель действий (заполняет оставшееся место) -->
        <StackPanel Orientation="Horizontal" 
                    Spacing="5"
                    x:Name="actionsPanel">
            <!-- Основные кнопки будут добавляться динамически в code-behind -->
        </StackPanel>
    </DockPanel>
</UserControl>
