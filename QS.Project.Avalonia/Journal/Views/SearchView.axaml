<UserControl x:Class="QS.Journal.Views.SearchView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:search="clr-namespace:QS.Journal.Search;assembly=QS.Project.Desktop"
             mc:Ignorable="d"
             d:DesignHeight="35"
             d:DesignWidth="400"
             x:DataType="search:SearchViewModel">
    <Grid>
        <TextBox x:Name="entrySearch" 
                 Watermark="Поиск..." 
                 MinWidth="200"
                 VerticalAlignment="Center"
                 Padding="5,5,30,5" />
        <Button x:Name="buttonSearchClear"
                Content="×"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                FontSize="18"
                Padding="8,0"
                Margin="0,0,5,0"
                Cursor="Hand"
                ToolTip.Tip="Очистить поиск" />
    </Grid>
</UserControl>

