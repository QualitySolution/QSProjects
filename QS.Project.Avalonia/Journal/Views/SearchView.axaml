<UserControl x:Class="QS.Journal.Views.SearchView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="50"
             d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Spacing="5">
        <TextBox x:Name="entrySearch" 
                 Watermark="Поиск..." 
                 MinWidth="200"
                 VerticalAlignment="Center" />
        <TextBox x:Name="entrySearch2" 
                 Watermark="Доп. поле" 
                 MinWidth="150"
                 VerticalAlignment="Center"
                 IsVisible="False" />
        <TextBox x:Name="entrySearch3" 
                 Watermark="Доп. поле" 
                 MinWidth="150"
                 VerticalAlignment="Center"
                 IsVisible="False" />
        <TextBox x:Name="entrySearch4" 
                 Watermark="Доп. поле" 
                 MinWidth="150"
                 VerticalAlignment="Center"
                 IsVisible="False" />
    </StackPanel>
</UserControl>

