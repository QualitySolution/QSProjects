<Window x:Class="QS.Launcher.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:QS.Launcher.Views"
        xmlns:vm="using:QS.Launcher.ViewModels"
        Title="QS.Launcher"
        Width="450"
        Height="650"
        MinWidth="300"
        MinHeight="300"
        d:DesignHeight="650"
        d:DesignWidth="450"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <ScrollViewer>
        <Panel>
            <Carousel x:Name="carousel" ItemsSource="{Binding Pages}" SelectedItem="{Binding SelectedPage}">
                <Carousel.PageTransition>
                    <PageSlide Orientation="Horizontal" Duration="0.25" />
                </Carousel.PageTransition>
            </Carousel>
        </Panel>
    </ScrollViewer>
</Window>
